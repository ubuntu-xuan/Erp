        <script>
        function initTable() {

        window.operateEvents = {
       
        };

        //先销毁表格
{#        $('#table').bootstrapTable('destroy');#}
        //初始化表格,动态从服务器加载数据
        $("#table").bootstrapTable({
{#            method: "get",  //使用get请求到服务器获取数据#}
            url: '/payment/pay_request/return_json',
            striped: true,  //表格显示条纹
            pagination: true, //启动分页
            pageSize: 25,  //每页显示的记录数
            pageNumber:1, //当前第几页
            pageList: [5, 10, 15, 20, 25,50],  //记录数可选列表
            search: true,  //是否启用查询
            showColumns: true,  //显示下拉框勾选要显示的列
            showRefresh: true,  //显示刷新按钮
            singleSelect: true,
            checkboxHeader:true,
            detailFormatter:true,
            checkboxHeader:true,
            uniqueId:"id",
            toolbar: '#toolbar',
            toolbarAlign:"left",
            sidePagination: "client",
            paginationVAlign:'top',
            paginationHAlign:'right',
            showExport:true,
            exportDataType: 'all',
{#            basic', 'all', 'selected'.#}
            sortOrder: 'desc',
            locale: "zh-CN",
            columns: [{
                field: 'state',
                checkbox: true,

            },{
                field: 'number',
                title: '编号',
                align: 'center',
                sortable: true,

            },{
                field: 'date',
                title: '申请日期',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '申请日期',
	        }
            },{
                field: 'purchase_order',
                title: '合同编号',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '合同编号',
	        }

            },{
                field: 'project_name',
                title: '项目名称',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '项目名称',
	        }
            },{
                field: 'receivable_company',
                title: '收款单位',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '收款单位',
	        }

            },{
                field: 'purpose_all',
                title: '项目摘要',
                align: 'center',
            },{
                field: 'project_amount',
                title: '合同总金额',
                align: 'center',
            },{
                field: 'sum_payed',
                title: '付款总金额',
            },{
                field: 'payed',
                title: '累计已支付金额',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '累计已支付金额',
	        }

            },{
                field: 'pay_way',
                title: '支付方式',
                align: 'center',
                editable: {
                    type: 'select',
                    title: '状态',
                    emptytext: '选择',
                    source: [
                         { value: '电汇', text: '电汇' },
                         { value: '支票', text: '支票' },
                         { value: '现金', text: '现金' },
                         { value: '承兑', text: '承兑' },
                         { value: '其他', text: '其他' },
                    ]
                }
            },{
                field: 'remark',
                title: '备注',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '备注',
                }

            },{
                field: 'operator',
                title: '经办人',
                align: 'center',
                editable: {
                    type: 'text',
                    title: '经办人',
		    emptytext: '---',
                }
            }
           ],

            queryParamsType : "undefined",

            onEditableSave: function (field, row, oldValue, $el) {
                $.ajax({
                    type: "post",
                    url: "/payment/pay_request",
                    data: {
                        'row':row,
                        'oldValue':oldValue,
                    },
                    dataType: 'JSON',
                    success: function (data, status) {
                        if (status == "success") {
                            alert('提交数据成功');
                        }
                    },
{#                    error: function () {#}
{#                        alert('编辑失败');#}
{#                    },#}
                    complete: function () {

                    }
                });
            }
        });

        function operateFormatter(value, row, index) {
                return [
            '<a class="write_abstracts" href="javascript:;" title="编写付款项目摘要">',
{#            '<i class="glyphicon glyphicon-remove"></i>',#}'付款项目摘要',
            '</a>',' ',
           ].join('');
        }
      }

      $(document).ready(function () {
          //调用函数，初始化表格
          initTable();

          function getIdSelections() {
            return $.map($table.bootstrapTable('getSelections'), function (row) {
                return row.number
            });
          }
          function getOrderSelections() {
            return $.map($table.bootstrapTable('getSelections'), function (row) {
                return row.purchase_order
            });
          }


          var $table = $('#table'),$remove = $('#remove'),$add = $('#add');
        
          selections = [];
           
          $table.on('check.bs.table uncheck.bs.table ' +
                'check-all.bs.table uncheck-all.bs.table', function () {
            $remove.prop('disabled', !$table.bootstrapTable('getSelections').length);
            
            // save your data, here just save the current page
                selections = getIdSelections();
            // push or splice the selections if you want to save all data selections

            });

	 $table.on('click-cell.bs.table', function (e, field, value, row, $element) {
	   if(field=="purpose_all"){
	     if(row.purchase_order=="edit"){}
	     else{
	        $('#abstracts_Modal').modal('toggle');
                var data = {
                   get_number_data:JSON.stringify({"number":row.number}) 
                }               
                $.ajax({
                    type: "post",
                    url: "/payment/pay_request",
                    async: false,
                    data:data,
                    dataType: 'JSON',
                    success: function (data, status) {
                        if (status == "success") {
			    $('input[name="pay_request_number"]').val(row.number);
			    $('input[name="deposit_bank"]').val(data[0]['deposit_bank']);
			    $('input[name="deposit_account"]').val(data[0]['deposit_account']);
			    $('input[name="tax_number"]').val(data[0]['tax_number']);

			    $('input[name="purpose1"]').val(data[0]['purpose1']);
			    $('input[name="amount1"]').val(data[0]['amount1']);
			    $('input[name="purpose2"]').val(data[0]['purpose2']);
			    $('input[name="amount2"]').val(data[0]['amount2']);
			    $('input[name="purpose3"]').val(data[0]['purpose3']);
			    $('input[name="amount3"]').val(data[0]['amount3']);
			    $('input[name="purpose4"]').val(data[0]['purpose4']);
			    $('input[name="amount4"]').val(data[0]['amount4']);		
                        }
                    },
                    complete: function () {
                    }
                });
	     }	
	   }  
          });
	 



          $('#abstracts_save').click(function() {	      
             $('#form').submit();            
          })

          $table.on('all.bs.table', function (e, name, args) {
            console.log(name, args);
          });

          $remove.click(function () {
            var number = getIdSelections();
            var order = getOrderSelections();

            $.ajax({
                    type:'POST',
                    url:'/payment/pay_request',
                    async: false,
                    data:{
                        'remove_number':number,
			'remove_order': order
                    },
                    dataType:'json',
                    success:function(data){},
                    error:function(xhr,type){}
             });

            $table.bootstrapTable('remove', {
                field: 'number',
                values: number
            });

            $remove.prop('disabled', true);
          });

          $add.click(function(){
{#              var ids = getIdSelections();#}
              $.ajax({
                    type: "post",
                    url: "/payment/pay_request",
                    async: false,
                    data:{
                        'add':'add_true'
                    },
                    dataType: 'JSON',
                    success: function (data, status) {
                        if (status == "success") {
                            alert('提交数据成功');
                        }
                    },
{#                    error: function () {#}
{#                        alert('编辑失败');#}
{#                    },#}
                    complete: function () {
                    }
                });

              $table.bootstrapTable('refresh', {url: '/payment/pay_request/return_json'});
              $table.bootstrapTable('selectPage','last')
          });

          //当点击查询按钮的时候执行
{#          $("#search").bind("click", initTable);#}
      });

    </script> 


{% endblock %}








 
